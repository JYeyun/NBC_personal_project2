<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round"
            android:clipToOutline="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:id="@+id/product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.6"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="prduct title"
            android:textSize="19sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@+id/product_img"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/product_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수원시 영통구 원천동"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/product_title"
            app:layout_constraintLeft_toRightOf="@+id/product_img"/>
        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50,000원"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/product_address"
            app:layout_constraintLeft_toRightOf="@+id/product_img"/>
        <ImageView
            android:id="@+id/product_chat_img"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/chat"
            app:layout_constraintRight_toLeftOf="@+id/product_chat"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/product_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="55"
            android:textSize="17sp"
            app:layout_constraintRight_toLeftOf="@+id/product_like_img"
            app:layout_constraintTop_toTopOf="@+id/product_chat_img"
            app:layout_constraintBottom_toBottomOf="@+id/product_chat_img"/>
        <ImageView
            android:id="@+id/product_like_img"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/heart"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toLeftOf="@+id/product_like"
            app:layout_constraintTop_toTopOf="@+id/product_chat_img"
            app:layout_constraintBottom_toBottomOf="@+id/product_chat_img"/>
        <TextView
            android:id="@+id/product_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55"
            android:textSize="17sp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/product_chat_img"
            app:layout_constraintBottom_toBottomOf="@+id/product_chat_img"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/product_like"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>